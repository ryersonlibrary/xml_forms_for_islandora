<?xml version="1.0"?>
<definition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="3">
	<properties>
		<root_name>mods:mods</root_name>
		<schema_uri>http://www.loc.gov/standards/mods/v3/mods-3-4.xsd</schema_uri>
		<namespaces default="http://www.loc.gov/mods/v3">
			<namespace prefix="etd">http://www.ndltd.org/standards/metadata/etdms/1.0</namespace>
			<namespace prefix="mods">http://www.loc.gov/mods/v3</namespace>
			<namespace prefix="xsi">http://www.w3.org/2001/XMLSchema-instance</namespace>
			<namespace prefix="xlink">http://www.w3.org/1999/xlink</namespace>
		</namespaces>
	</properties>
	<form>
		<properties>
			<type>form</type>
			<access>TRUE</access>
			<tree>TRUE</tree>
			<actions>
				<create>NULL</create>
				<read>
					<path>//mods:mods[1]</path>
					<context>document</context>
				</read>
				<update>NULL</update>
				<delete>NULL</delete>
			</actions>
		</properties>
		<children>
			<!--	Tab Panels for contributors:
					1) @type="personal" ; multi-part names
					2) @type="corporate" ; single-part names
			-->
			<!-- TODO -->
			<element name="contributors_personal_group"/>
			<!-- TODO -->
			<element name="contributors_corporate_group"/>
			<!-- REQUIRED ELEMENTS -->
			<element name="hidden">
				<properties>
					<type>fieldset</type>
					<access>TRUE</access>
					<description>These elements will be hidden and have hardcoded values based on the form.</description>
					<title>FOR REVIEW ONLY</title>
					<tree>TRUE</tree>
				</properties>
				<children>
					<element name="genre">
						<properties>
							<type>textfield</type>
							<access>TRUE</access>
							<default_value>thesis</default_value>
							<title>Genre</title>
							<description>Values constrained to marcgt terms</description>
							<tree>TRUE</tree>
							<actions>
								<create>
									<path>self::node()</path>
									<context>parent</context>
									<schema/>
									<type>xml</type>
									<prefix>NULL</prefix>
									<value>&lt;genre authority="marcgt"&gt;%value%&lt;/genre&gt;</value>
								</create>
								<read>
									<path>mods:genre</path>
									<context>parent</context>
								</read>
								<update>
									<path>self::node()</path>
									<context>self</context>
								</update>
								<delete>NULL</delete>
							</actions>
						</properties>
						<children/>
					</element>
					<element name="language">
						<properties>
							<type>textfield</type>
							<access>TRUE</access>
							<default_value>eng</default_value>
							<title>Language</title>
							<description>Values constrained to iso639-2b</description>
							<tree>TRUE</tree>
							<actions>
								<create>
									<path>self::node()</path>
									<context>parent</context>
									<schema/>
									<type>xml</type>
									<prefix>NULL</prefix>
									<value>&lt;language&gt;&lt;languageTerm authority="iso639-2b" type="code"&gt;%value%&lt;/languageTerm&gt;&lt;/language&gt;</value>
								</create>
								<read>
									<path>mods:language/mods:languageTerm[@authority="iso639-2b" and @type="code"]</path>
									<context>parent</context>
								</read>
								<update>
									<path>self::node()</path>
									<context>self</context>
								</update>
								<delete>NULL</delete>
							</actions>
						</properties>
						<children/>
					</element>
					<element name="typeOfResource">
						<properties>
							<type>textfield</type>
							<access>TRUE</access>
							<default_value>text</default_value>
							<title>Type Of Resource</title>
							<description>Values constrained to MODS guidelines</description>
							<tree>TRUE</tree>
							<actions>
								<create>
									<path>self::node()</path>
									<context>parent</context>
									<schema/>
									<type>xml</type>
									<prefix>NULL</prefix>
									<value>&lt;typeOfResource&gt;%value%&lt;/typeOfResource&gt;</value>
								</create>
								<read>
									<path>mods:typeOfResource</path>
									<context>parent</context>
								</read>
								<update>
									<path>self::node()</path>
									<context>self</context>
								</update>
								<delete>NULL</delete>
							</actions>
						</properties>
						<children/>
					</element>
				</children>
			</element>
			<element name="titleInfo">
				<properties>
					<type>markup</type>
					<access>TRUE</access>
					<tree>TRUE</tree>
					<actions>
						<create>
							<path>self::node()</path>
							<context>parent</context>
							<schema/>
							<type>element</type>
							<prefix>NULL</prefix>
							<value>titleInfo</value>
						</create>
						<read>
							<path>mods:titleInfo[not(@*)]</path>
							<context>parent</context>
						</read>
						<update>
							<path>self::node()</path>
							<context>self</context>
						</update>
						<delete>NULL</delete>
					</actions>
				</properties>
				<children>
					<element name="title">
						<properties>
							<type>textarea</type>
							<access>TRUE</access>
							<description>The title of this publication.</description>
							<rows>2</rows>
							<title>Title</title>
							<tree>TRUE</tree>
							<actions>
								<create>
									<path>self::node()</path>
									<context>parent</context>
									<schema/>
									<type>element</type>
									<prefix>NULL</prefix>
									<value>title</value>
								</create>
								<read>
									<path>mods:title</path>
									<context>parent</context>
								</read>
								<update>
									<path>self::node()</path>
									<context>self</context>
								</update>
								<delete>NULL</delete>
							</actions>
						</properties>
						<children/>
					</element>
				</children>
			</element>
			<element name="abstract">
				<properties>
					<type>textarea</type>
					<access>TRUE</access>
					<description>Abstract or summary of the item</description>
					<rows>12</rows>
					<title>Abstract</title>
					<tree>TRUE</tree>
					<actions>
						<create>
							<path>self::node()</path>
							<context>parent</context>
							<schema/>
							<type>element</type>
							<prefix>NULL</prefix>
							<value>abstract</value>
						</create>
						<read>
							<path>mods:abstract</path>
							<context>parent</context>
						</read>
						<update>
							<path>self::node()</path>
							<context>self</context>
						</update>
						<delete>NULL</delete>
					</actions>
				</properties>
				<children/>
			</element>
			<!-- TODO -->
			<element name="subjects_group"/>
			<element name="originInfo">
				<properties>
					<type>fieldset</type>
					<access>TRUE</access>
					<tree>TRUE</tree>
					<title>Dates</title>
					<actions>
						<create>
							<path>self::node()</path>
							<context>parent</context>
							<schema/>
							<type>element</type>
							<prefix>NULL</prefix>
							<value>originInfo</value>
						</create>
						<read>
							<path>mods:originInfo</path>
							<context>parent</context>
						</read>
						<update>
							<path>self::node()</path>
							<context>self</context>
						</update>
						<delete>NULL</delete>
					</actions>
				</properties>
				<children>
					<element name="dateIssued">
						<properties>
							<type>datepicker</type>
							<access>TRUE</access>
							<title>Publication Date</title>
							<description>TODO: more information about dates</description>
							<tree>TRUE</tree>
							<actions>
								<create>
									<path>self::node()</path>
									<context>parent</context>
									<schema/>
									<type>element</type>
									<prefix>NULL</prefix>
									<value>dateIssued</value>
								</create>
								<read>
									<path>mods:dateIssued</path>
									<context>parent</context>
								</read>
								<update>
									<path>self::node()</path>
									<context>self</context>
								</update>
								<delete>NULL</delete>
							</actions>
						</properties>
						<children/>
					</element>
					<element name="dateOther">
						<properties>
							<type>datepicker</type>
							<access>TRUE</access>
							<description>Applies only to published works where the publisher has placed an embargo. Maximum 24 months.</description>
							<title>Embargo Date</title>
							<tree>TRUE</tree>
							<actions>
								<create>
									<path>self::node()</path>
									<context>parent</context>
									<schema/>
									<type>xml</type>
									<prefix>NULL</prefix>
									<value>&lt;mods:dateOther type="dateAvailable"&gt;%value%&lt;/mods:dateOther&gt;</value>
								</create>
								<read>
									<path>mods:dateOther[@type="dateAvailable"]</path>
									<context>parent</context>
								</read>
								<update>
									<path>self::node()</path>
									<context>self</context>
								</update>
								<delete>NULL</delete>
							</actions>
						</properties>
						<children/>
					</element>
				</children>
			</element>
			<!-- TODO -->
			<element name="license"/>
			<!-- FORM-SPECIFIC -->
			<element name="extension">
				<properties>
					<type>markup</type>
					<access>TRUE</access>
					<tree>TRUE</tree>
					<actions>
						<create>
							<path>self::node()</path>
							<context>parent</context>
							<schema/>
							<type>element</type>
							<prefix>NULL</prefix>
							<value>extension</value>
						</create>
						<read>
							<path>mods:extension</path>
							<context>parent</context>
						</read>
						<update>
							<path>self::node()</path>
							<context>self</context>
						</update>
						<delete>NULL</delete>
					</actions>
				</properties>
				<children>
					<element name="degree">
						<properties>
							<type>fieldset</type>
							<access>TRUE</access>
							<title>Thesis Information</title>
							<tree>TRUE</tree>
							<actions>
								<create>
									<path>self::node()</path>
									<context>parent</context>
									<schema/>
									<type>element</type>
									<prefix>etd</prefix>
									<value>etd:degree</value>
								</create>
								<read>
									<path>etd:degree</path>
									<context>parent</context>
								</read>
								<update>
									<path>self::node()</path>
									<context>self</context>
								</update>
								<delete>NULL</delete>
							</actions>
						</properties>
						<children>
							<element name="name">
								<properties>
									<type>textfield</type>
									<access>TRUE</access>
									<title>Degree Name</title>
									<description>TODO: this will be a drop-down</description>
									<tree>TRUE</tree>
									<actions>
										<create>
											<path>self::node()</path>
											<context>parent</context>
											<schema/>
											<type>element</type>
											<prefix>etd</prefix>
											<value>etd:name</value>
										</create>
										<read>
											<path>etd:name</path>
											<context>parent</context>
										</read>
										<update>
											<path>self::node()</path>
											<context>self</context>
										</update>
										<delete>NULL</delete>
									</actions>
								</properties>
								<children/>
							</element>
							<element name="department">
								<properties>
									<type>textfield</type>
									<access>TRUE</access>
									<title>Department</title>
									<description>TODO: this will be a drop-down</description>
									<tree>TRUE</tree>
									<actions>
										<create>
											<path>self::node()</path>
											<context>parent</context>
											<schema/>
											<type>element</type>
											<prefix>etd</prefix>
											<value>etd:department</value>
										</create>
										<read>
											<path>etd:department</path>
											<context>parent</context>
										</read>
										<update>
											<path>self::node()</path>
											<context>self</context>
										</update>
										<delete>NULL</delete>
									</actions>
								</properties>
								<children/>
							</element>
						</children>
					</element>
				</children>
			</element>
			<!-- OPTIONAL ELEMENTS -->
			<element name="location">
				<properties>
					<type>markup</type>
					<access>TRUE</access>
					<tree>TRUE</tree>
					<actions>
						<create>
							<path>self::node()</path>
							<context>parent</context>
							<schema/>
							<type>element</type>
							<prefix>NULL</prefix>
							<value>location</value>
						</create>
						<read>
							<path>mods:location</path>
							<context>parent</context>
						</read>
						<update>
							<path>self::node()</path>
							<context>self</context>
						</update>
						<delete>NULL</delete>
					</actions>
				</properties>
				<children>
					<element name="url">
						<properties>
							<type>textfield</type>
							<access>TRUE</access>
							<title>URL</title>
							<tree>TRUE</tree>
							<actions>
								<create>
									<path>self::node()</path>
									<context>parent</context>
									<schema/>
									<type>element</type>
									<prefix>NULL</prefix>
									<value>url</value>
								</create>
								<read>
									<path>mods:url</path>
									<context>parent</context>
								</read>
								<update>
									<path>self::node()</path>
									<context>self</context>
								</update>
								<delete>NULL</delete>
							</actions>
						</properties>
						<children/>
					</element>
				</children>
			</element>
			<element name="note">
				<properties>
					<type>textarea</type>
					<access>TRUE</access>
					<title>Note</title>
					<tree>TRUE</tree>
					<actions>
						<create>
							<path>self::node()</path>
							<context>parent</context>
							<schema/>
							<type>element</type>
							<prefix>NULL</prefix>
							<value>note</value>
						</create>
						<read>
							<path>mods:note[not(@*)]</path>
							<context>parent</context>
						</read>
						<update>
							<path>self::node()</path>
							<context>self</context>
						</update>
						<delete>NULL</delete>
					</actions>
				</properties>
				<children/>
			</element>
		</children>
	</form>
</definition>
